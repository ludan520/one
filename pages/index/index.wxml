<Search></Search>

<!-- 轮播图 -->
<swiper class='swiper' 
indicator-dots
autoplay="true" 
interval="5000" 
duration="1500" 
circular="true"
indicator-color='rgba(255, 255, 255, .3)' indicator-active-color='#ffffff'>
   <!-- 遍历轮播图 -->
   <block class='swiper_item'>
      <swiper-item wx:for='{{swiper}}' wx:key='goods_id'>
        <image class='swiper_image' src='{{item.image_src}}'></image>
      </swiper-item>
   </block>
</swiper>

<!-- 分类菜单 -->
<view class="cate">
   <block wx:for='{{cate}}' wx:key="{{name}}">
       <view class='cate_item'>
          <image src="{{item.image_src}}" class="cate_image">
          </image>
        </view>
   </block>
</view>
 
